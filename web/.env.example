# ==========================================
# PontoFlow Environment Variables
# ==========================================
# Copy this file to .env.local and fill in your values

# ==========================================
# Supabase Configuration (REQUIRED)
# ==========================================
NEXT_PUBLIC_SUPABASE_URL=your-project-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ==========================================
# JWT Configuration (REQUIRED)
# ==========================================
# Secret key for JWT token signing (minimum 32 characters)
# Generate with: openssl rand -hex 32
# CRITICAL: Keep this secret and never commit to version control!
JWT_SECRET=your-jwt-secret-here-minimum-32-characters

# ==========================================
# Super Admin Configuration
# ==========================================
# Email of the system owner (Caio) who can export data from ALL tenants
# Other admins can only export data from their own tenant
SUPER_ADMIN_EMAIL=Caiovaleriogoulartcorreia@gmail.com

# ==========================================
# Cron Jobs Security
# ==========================================
# Secret for authenticating cron job requests
# Generate a strong random string (e.g., openssl rand -hex 32)
CRON_SECRET=your-cron-secret-here

# ==========================================
# Admin Sync (Optional)
# ==========================================
# Secret for admin sync operations (export/import)
ADMIN_SYNC_SECRET=your-sync-secret-here

# ==========================================
# Email Configuration (Optional)
# ==========================================
# SMTP settings for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
MAIL_FROM=noreply@pontoflow.com

# ==========================================
# Legacy ABZ Integration (Optional)
# ==========================================
# Enable sync with legacy users_unified table (ABZ Group specific)
# Set to 'false' for new clients
ENABLE_USERS_UNIFIED_SYNC=false

# ==========================================
# Development (Optional)
# ==========================================
NODE_ENV=development
NEXT_PUBLIC_BASE_URL=http://localhost:3000
